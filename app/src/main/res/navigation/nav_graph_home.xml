<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/home_dest">


    <fragment
        android:id="@+id/home_dest"
        android:name="com.pedroaguilar.amigodeviaje.mainModule.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/details_dest"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/details_dest"
        android:name="com.pedroaguilar.amigodeviaje.detailsModule.DetailsFragment"
        android:label="Detalles"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/add_dest"
        android:name="com.pedroaguilar.amigodeviaje.addModule.AddFragment"
        android:label="Agregar"
        tools:layout="@layout/fragment_add" />
    <fragment
        android:id="@+id/profile_dest"
        android:name="com.pedroaguilar.amigodeviaje.profileModule.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/settings_dest"
        android:name="com.pedroaguilar.amigodeviaje.settingsModule.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/favorite_dest"
        android:name="com.pedroaguilar.amigodeviaje.favoriteModule.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
</navigation>