<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.pedroaguilar.amigodeviaje.presentacion.ui.main.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/add_dest"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_home_dest_to_categoriaFragment"
            app:destination="@id/categoria_dest"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"/>

    </fragment>
    <fragment
        android:id="@+id/details_dest"
        android:name="com.pedroaguilar.amigodeviaje.presentacion.ui.details.DetailsFragment"
        android:label="Detalles"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="categoriaId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/add_dest"
        android:name="com.pedroaguilar.amigodeviaje.presentacion.ui.add.AddFragment"
        android:label="Agregar"
        tools:layout="@layout/fragment_add" />
    <fragment
        android:id="@+id/profile_dest"
        android:name="com.pedroaguilar.amigodeviaje.presentacion.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/add_dest"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/settings_dest"
        android:name="com.pedroaguilar.amigodeviaje.presentacion.ui.settings.SettingsFragment"
        android:label="Ajustes"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/add_dest"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/favorite_dest"
        android:name="com.pedroaguilar.amigodeviaje.presentacion.ui.favorite.FavoriteFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/add_dest"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/categoria_dest"
        android:name="com.pedroaguilar.amigodeviaje.presentacion.ui.categoriaDetalle.CategoriaDetalleFragment"
        android:label="Categoria"
        tools:layout="@layout/fragment_categoria_detalle" >
        <argument
            android:name="categoriaId"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_categoria_dest_to_details_dest"
            app:destination="@id/details_dest"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"/>
    </fragment>
</navigation>